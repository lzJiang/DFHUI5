<mvc:View
    displayBlock="true"
    controllerName="zui50013.controller.Detail"
    height="100%"
    xmlns="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        showTitleInHeaderContent="true"
        alwaysShowContentHeader="false"
        preserveHeaderStateOnScroll="false"
        headerContentPinnable="true"
        isChildPage="true"
        upperCaseAnchorBar="false"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle"
            >
                <expandedHeading>
                    <m:Title
                        id="_IDGenTitle"
                        text="{dataModel>outbillno}"
                        wrapping="true"
                        class="sapUiSmallMarginEnd"
                    />
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox
                        id="_IDGenFlexBox"
                        wrap="Wrap"
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <m:FlexBox
                            id="_IDGenFlexBox1"
                            wrap="NoWrap"
                            fitContainer="true"
                            alignItems="Center"
                            class="sapUiTinyMarginEnd"
                        >
                            <!-- <m:Avatar src="../../../../../../../{dataModel>ProductPicUrl}" displaySize="S" displayShape="Square"/> -->
                            <m:Title
                                id="_IDGenTitle1"
                                text="{dataModel>outbillno}"
                                wrapping="true"
                                class="sapUiTinyMarginEnd"
                            />
                        </m:FlexBox>
                    </m:FlexBox>
                </snappedHeading>

                <navigationActions>
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://full-screen"
                        press="handleFullScreen"
                        id="enterFullScreenBtn"
                        tooltip="Enter Full Screen Mode"
                        visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"
                    />
                    <m:OverflowToolbarButton
                        type="Transparent"
                        icon="sap-icon://exit-full-screen"
                        press="handleExitFullScreen"
                        id="exitFullScreenBtn"
                        tooltip="Exit Full Screen Mode"
                        visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"
                    />
                    <m:OverflowToolbarButton
                        id="_IDGenOverflowToolbarButton"
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="handleClose"
                        tooltip="Close middle column"
                        visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"
                    />
                </navigationActions>

                <!-- <actions>
							<m:Button
									text="Edit"
									type="Emphasized"
									press="toggleAreaPriority"/>
							<m:Button
									text="Delete"
									type="Transparent"/>
							<m:Button
									text="Copy"
									type="Transparent"/>
							<m:Button
									text="Toggle Footer"
									type="Transparent"
									press="onToggleFooter"/>
							<m:Button
									icon="sap-icon://action"
									type="Transparent"/>
						</actions> -->
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                id="_IDGenFlexBox2"
                wrap="Wrap"
                fitContainer="true"
                alignItems="Stretch"
            >
                <!-- <m:Avatar src="../../../../../../../{dataModel>ProductPicUrl}"
								  displaySize="L"
								  displayShape="Square"
								  class="sapUiTinyMarginEnd">
						</m:Avatar> -->
                <m:VBox
                    id="_IDGenVBox11"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel11"
                        text="SAP计划订单号"
                    />
                    <m:Text
                        id="_IDGenText51"
                        text="{dataModel>plannedorder}"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox1"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel"
                        text="工厂"
                    />
                    <m:Text
                        id="_IDGenText5"
                        text="{dataModel>productionplant}"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox2"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel1"
                        text="产品"
                    />
                    <m:Text
                        id="_IDGenText6"
                        text="{dataModel>product}"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox3"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel2"
                        text="计划开始日期"
                    />
                    <m:Text
                        id="_IDGenText7"
                        text="{dataModel>plndorderplannedstartdate}"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox4"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel3"
                        text="计划结束日期"
                    />
                    <m:Text
                        id="_IDGenText8"
                        text="{dataModel>plndorderplannedenddate}"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox5"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel6"
                        text="数量"
                    />
                    <m:Text
                        id="_IDGenText9"
                        text="{dataModel>plannedtotalqtyinbaseunit}"
                    />
                </m:VBox>
                <m:VBox
                    id="_IDGenVBox6"
                    justifyContent="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <m:Label
                        id="_IDGenLabel7"
                        text="计划批次"
                    />
                    <m:Text
                        id="_IDGenText10"
                        text="{dataModel>yy1_plannebatch_pla}"
                    />
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection
                id="_IDGenObjectPageSection"
                title="备注"
            >
                <subSections>
                    <ObjectPageSubSection id="_IDGenObjectPageSubSection">
                        <blocks>
                            <m:TextArea
                                id="textAreaWithBinding2"
                                value="{dataModel>plannedorderlongtext}"
                                showExceededText="true"
                                width="100%"
                                editable="false"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
