<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="selectDialog"
		title="Products"
		items="{valuehelpModel>/ProductCollection}"
		search=".onProductValueHelpSearch"
		confirm=".onProductValueHelpClose"
		cancel=".onProductValueHelpClose">
		<StandardListItem
			title="{valuehelpModel>product}"
			description="{valuehelpModel>productname}" />
	</SelectDialog>
</core:FragmentDefinition>